@{
  Layout = "_Layout";
}

@using Vendor_and_Order_Tracker.Models;

<h1>Orders</h1>

@if (@Model.Count == 0)
{
  <h2>There are currently no Orders</h2>
}

@foreach (Order element in Model)
{
  <h2><a href="orders/@element.Id">@element.Id</a></h2>
}

<p><a href="/orders/new">Add new order</a></p>
<p><a href="/vendors">Vendors</a></p>
<p><a href="/">Home</a></p>