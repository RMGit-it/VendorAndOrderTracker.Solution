@{
  Layout = "_Layout";
}

@using Vendor_and_Order_Tracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h2>No Vendors have been added yet!</h2>
}

@foreach (Vendor element in Model)
{
  int tempListId = @element.GetListId();
  <h2><a href="vendors/@tempListId">@element.GetVendorName()</a></h2>
}

<p><a href="/vendors/new">Add new vendor</a></p>
<p><a href="/orders">Orders</a></p>
<p><a href="/">Home</a></p>